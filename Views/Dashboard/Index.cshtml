<script>
    // Global Filter State with History
    const filterState = {
        type: null,        // 'monthly' | 'weekly' | 'daily' | 'part' | 'criteria'
        value: null,       // Selected value
        dateRange: null    // Calculated { startDate, endDate }
    };

    const filterHistory = {
        stack: [],
        currentIndex: -1
    };

    function applyFilter(type, value) {
        let dr = filterState.dateRange; // Preserve existing date range
        
        if (type === 'monthly') {
            // value format assumed: YYYY-MM
            const parts = value.split('-');
            if(parts.length >= 2) {
                const y = parseInt(parts[0]);
                const m = parseInt(parts[1]);
                const lastDay = new Date(y, m, 0).getDate();
                dr = {
                    startDate: `${y}-${String(m).padStart(2, '0')}-01`,
                    endDate: `${y}-${String(m).padStart(2, '0')}-${String(lastDay).padStart(2, '0')}`
                };
            }
        } else if (type === 'weekly') {
            // value format: "Week 5", "W5", etc.
            const match = value.match(/\d+/);
            const weekNum = match ? parseInt(match[0]) : 0;
            const currentYear = new Date().getFullYear();
            
            // Calculate start and end date of the week
            // Match SQL Server DATEPART(week, ...) calculation
            // SQL Server uses Sunday as first day and FirstDay rule (week starts on Sunday)
            // Week 1 is the week containing Jan 1, starting from the first Sunday on or before Jan 1
            
            const jan1 = new Date(currentYear, 0, 1);
            const jan1Day = jan1.getDay(); // 0=Sunday, 1=Monday, ..., 6=Saturday
            
            // Find the start of Week 1 (first Sunday on or before Jan 1)
            let week1Start;
            if (jan1Day === 0) {
                // Jan 1 is Sunday, Week 1 starts on Jan 1
                week1Start = new Date(jan1);
            } else {
                // Go back to previous Sunday
                week1Start = new Date(jan1);
                week1Start.setDate(jan1.getDate() - jan1Day);
            }
            
            // Calculate the start of the selected week
            // Week 1 starts from week1Start, Week 2 starts 7 days later, etc.
            const weekStart = new Date(week1Start);
            weekStart.setDate(week1Start.getDate() + (weekNum - 1) * 7);
            
            // Calculate the end of the selected week (6 days after start = Saturday)
            const weekEnd = new Date(weekStart);
            weekEnd.setDate(weekStart.getDate() + 6);
            
            // Format dates as YYYY-MM-DD (local time, no timezone conversion)
            const formatDate = (date) => {
                const y = date.getFullYear();
                const m = String(date.getMonth() + 1).padStart(2, '0');
                const d = String(date.getDate()).padStart(2, '0');
                return `${y}-${m}-${d}`;
            };
            
            dr = {
                startDate: formatDate(weekStart),
                endDate: formatDate(weekEnd)
            };
            
            console.log(`[applyFilter] Weekly filter calculated: Week ${weekNum} = ${dr.startDate} to ${dr.endDate}`);
        } else if (type === 'daily') {
             dr = { startDate: value, endDate: value };
        } else if (type === 'part' || type === 'criteria') {
             // For part/criteria, keep existing date range
             // Just update type and value in filterState
        }
        
        // If type is part or criteria, we keep the dr as is.
        
        const newState = { type, value, dateRange: dr };
        pushToHistory(newState);
        restoreState(newState);
    }

    function pushToHistory(state) {
        if (filterHistory.currentIndex < filterHistory.stack.length - 1) {
            filterHistory.stack = filterHistory.stack.slice(0, filterHistory.currentIndex + 1);
        }
        filterHistory.stack.push({ ...state });
        filterHistory.currentIndex = filterHistory.stack.length - 1;
    }

    function navigateBack() {
        if (filterHistory.currentIndex > 0) {
            filterHistory.currentIndex--;
            restoreState(filterHistory.stack[filterHistory.currentIndex]);
        }
    }

    function navigateForward() {
        if (filterHistory.currentIndex < filterHistory.stack.length - 1) {
            filterHistory.currentIndex++;
            restoreState(filterHistory.stack[filterHistory.currentIndex]);
        }
    }

    function restoreState(state) {
        filterState.type = state.type;
        filterState.value = state.value;
        filterState.dateRange = state.dateRange;
        updateDropdownsFromFilter(); // Sync dropdowns with filter state
        updateFilterIndicator();
        updateNavigationButtons();
        loadData();
    }

    function updateDropdownsFromFilter() {
        // Sync dropdowns based on active filter
        if (filterState.type === 'monthly' && filterState.value) {
            document.getElementById('filterMonth').value = filterState.value;
            document.getElementById('filterDate').value = ''; // Clear date filter
        } else if (filterState.type === 'daily' && filterState.value) {
            document.getElementById('filterDate').value = filterState.value;
            document.getElementById('filterMonth').value = ''; // Clear month filter
        } else if (filterState.type === 'weekly') {
            // Weekly doesn't have dropdown, so clear month and date
            document.getElementById('filterMonth').value = '';
            document.getElementById('filterDate').value = '';
        } else if (filterState.type === 'part' && filterState.value) {
            document.getElementById('filterPartCode').value = filterState.value;
        } else if (filterState.type === 'criteria' && filterState.value) {
            document.getElementById('filterKategoriNg').value = filterState.value;
        } else if (!filterState.type) {
            // Clear all dropdowns when no filter is active
            document.getElementById('filterMonth').value = '';
            document.getElementById('filterDate').value = '';
            document.getElementById('filterJenisNg').value = '';
            document.getElementById('filterKategoriNg').value = '';
            document.getElementById('filterLine').value = '';
            document.getElementById('filterPartCode').value = '';
        }
    }

    function updateNavigationButtons() {
        const btnBack = document.getElementById('btnFilterBack');
        const btnForward = document.getElementById('btnFilterForward');
        if (btnBack) btnBack.disabled = filterHistory.currentIndex <= 0;
        if (btnForward) btnForward.disabled = filterHistory.currentIndex >= filterHistory.stack.length - 1;
    }

    function updateFilterIndicator() {
        const indicator = document.getElementById('activeFilterIndicator');
        const filterLabel = document.getElementById('filterLabel');
        
        if (filterState.type) {
            let filterText = '';
            if (filterState.type === 'monthly') {
                filterText = `üìÖ Month: ${filterState.value}`;
            } else if (filterState.type === 'weekly') {
                // Show date range for weekly filter
                if (filterState.dateRange) {
                    const start = new Date(filterState.dateRange.startDate);
                    const end = new Date(filterState.dateRange.endDate);
                    const formatDate = (d) => d.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
                    filterText = `üìÖ ${filterState.value} (${formatDate(start)} - ${formatDate(end)})`;
                } else {
                    filterText = `üìÖ Week: ${filterState.value}`;
                }
            } else if (filterState.type === 'daily') {
                filterText = `üìÖ Date: ${filterState.value}`;
            } else if (filterState.type === 'part') {
                filterText = `üîß Part: ${filterState.value}`;
            } else if (filterState.type === 'criteria') {
                filterText = `‚ö†Ô∏è Criteria: ${filterState.value}`;
            }
            
            filterLabel.innerHTML = `<i class="fas fa-filter"></i> ${filterText}`;
            indicator.style.display = 'flex';
        } else {
            indicator.style.display = 'none';
        }
    }

    function clearFilter() {
        filterState.type = null;
        filterState.value = null;
        filterState.dateRange = null;
        filterHistory.stack = [];
        filterHistory.currentIndex = -1;
        updateFilterIndicator();
        updateNavigationButtons();
        loadData();
    }

    document.addEventListener('DOMContentLoaded', function () {
        onPlantChange(); // Initialize filter options and data
        
        // Auto refresh every 5 minutes for TV display
        setInterval(loadData, 300000);
        
        // Handle window resize for chart responsiveness
        let resizeTimeout;
        window.addEventListener('resize', function() {
            clearTimeout(resizeTimeout);
            resizeTimeout = setTimeout(function() {
                // Trigger chart resize
                if (window.charts) {
                    Object.keys(window.charts).forEach(function(selector) {
                        if (window.charts[selector] && typeof window.charts[selector].resize === 'function') {
                            try {
                                window.charts[selector].resize();
                            } catch(e) {
                                console.warn('Chart resize error:', e);
                            }
                        }
                    });
                }
                // Also trigger ApexCharts global resize
                if (window.ApexCharts) {
                    window.dispatchEvent(new Event('resize'));
                }
            }, 250);
        });
        
        // Re-render donut chart on resize to update responsive options
        let donutResizeTimeout;
        window.addEventListener('resize', function() {
            clearTimeout(donutResizeTimeout);
            donutResizeTimeout = setTimeout(function() {
                // If donut chart exists and data is loaded, update it
                if (window.currentData && window.charts && window.charts['#chartDonut']) {
                    const isSmallScreen = window.innerWidth <= 1366;
                    const isMediumScreen = window.innerWidth > 1366 && window.innerWidth < 1920;
                    
                    // Update legend position dynamically
                    try {
                        const chart = window.charts['#chartDonut'];
                        if (chart && chart.updateOptions) {
                            chart.updateOptions({
                                legend: {
                                    position: isSmallScreen ? 'bottom' : 'right',
                                    horizontalAlign: isSmallScreen ? 'center' : 'right',
                                    fontSize: isSmallScreen ? '9px' : (isMediumScreen ? '10px' : '11px')
                                },
                                plotOptions: {
                                    pie: {
                                        donut: {
                                            size: isSmallScreen ? '75%' : (isMediumScreen ? '70%' : '70%')
                                        }
                                    }
                                }
                            }, false, false);
                        }
                    } catch(e) {
                        console.warn('Donut chart update error:', e);
                    }
                }
            }, 300);
        });
    });

    function onPlantChange() {
        const plantId = document.getElementById('filterPlant').value;
        loadFilterOptions(plantId);
        loadData();
    }

    function onDropdownChange(filterType) {
        // When dropdown changes, update filterState accordingly
        const value = document.getElementById(getDropdownId(filterType)).value;
        
        if (!value) {
            // If dropdown is cleared, clear the filter
            clearFilter();
            return;
        }

        // Update filterState based on dropdown type
        if (filterType === 'month') {
            applyFilter('monthly', value);
        } else if (filterType === 'date') {
            applyFilter('daily', value);
        } else if (filterType === 'partCode') {
            applyFilter('part', value);
        } else if (filterType === 'kategoriNg') {
            applyFilter('criteria', value);
        } else {
            // For line and jenisNg, just reload data without setting filterState
            // This allows them to work as additional filters
            loadData();
        }
    }

    function getDropdownId(filterType) {
        const mapping = {
            'month': 'filterMonth',
            'date': 'filterDate',
            'jenisNg': 'filterJenisNg',
            'kategoriNg': 'filterKategoriNg',
            'line': 'filterLine',
            'partCode': 'filterPartCode'
        };
        return mapping[filterType] || filterType;
    }

    function loadFilterOptions(plantId) {
        fetch(`/Dashboard/GetFilterOptions?plantId=${plantId}`)
            .then(res => res.json())
            .then(res => {
                if (res.success) {
                    const d = res.data;
                    populateDropdown('filterMonth', d.months, '-- SEMUA BULAN --');
                    populateDropdown('filterDate', d.dates, '-- SEMUA TANGGAL --');
                    populateDropdown('filterJenisNg', d.jenisNg, '-- SEMUA JENIS --');
                    populateDropdown('filterKategoriNg', d.kategoriNg, '-- SEMUA KATEGORI --');
                    populateDropdown('filterLine', d.lines, '-- SEMUA LINE --');
                    populateDropdown('filterPartCode', d.partCodes, '-- SEMUA PART --');
                }
            });
    }

    function populateDropdown(id, list, defaultText) {
        const sel = document.getElementById(id);
        if (!sel) return;
        
        const currentVal = sel.value;
        sel.innerHTML = `<option value="">${defaultText}</option>`;
        
        if (list && Array.isArray(list)) {
            list.forEach(item => {
                if (item !== null && item !== undefined && item !== '') {
                    const opt = document.createElement('option');
                    opt.value = item;
                    opt.textContent = item;
                    if (item === currentVal) opt.selected = true;
                    sel.appendChild(opt);
                }
            });
        }
    }

    function loadData() {
        document.getElementById('loader').style.display = 'flex';
        
        const plantId = document.getElementById('filterPlant').value;
        const month = document.getElementById('filterMonth').value;
        const date = document.getElementById('filterDate').value;
        const jenisNg = document.getElementById('filterJenisNg').value;
        const kategoriNg = document.getElementById('filterKategoriNg').value;
        const line = document.getElementById('filterLine').value;
        const partCode = document.getElementById('filterPartCode').value;

        // Calculate dates based on filterState first, then fallback to dropdown
        let startDate = '', endDate = '';
        if (filterState.dateRange) {
            // Use date range from chart click (monthly/weekly/daily)
            startDate = filterState.dateRange.startDate;
            endDate = filterState.dateRange.endDate;
        } else if (date) {
            // Use date from dropdown
            startDate = date;
            endDate = date;
        } else if (month) {
            const [y, m] = month.split('-');
            startDate = `${y}-${m}-01`;
            const last = new Date(y, m, 0).getDate();
            endDate = `${y}-${m}-${String(last).padStart(2, '0')}`;
        } else {
            // Default: Year-to-Date (from Jan 1st of current year)
            // This ensures Monthly Trend shows all months in current year (e.g. Jan & Feb)
            const now = new Date();
            const y = now.getFullYear(); // Current Year
            startDate = `${y}-01-01`;    // Jan 1st
            // End Date is end of current month to include all potential data
            endDate = new Date(y, now.getMonth() + 1, 0).toISOString().split('T')[0];
        }

        // Use filterState values if set (from chart click), otherwise use dropdown values
        let finalLine = line;
        let finalJenisNg = jenisNg;
        let finalKategoriNg = kategoriNg;
        let finalPartCode = partCode;

        // Override with filterState if active (from chart click)
        if (filterState.type === 'part') finalPartCode = filterState.value;
        if (filterState.type === 'criteria') finalKategoriNg = filterState.value;

        const url = `/Dashboard/GetData?plantId=${plantId}&startDate=${startDate}&endDate=${endDate}&line=${encodeURIComponent(finalLine)}&jenisNg=${encodeURIComponent(finalJenisNg)}&kategoriNg=${encodeURIComponent(finalKategoriNg)}&partCode=${encodeURIComponent(finalPartCode)}`;

        // Debug logging
        if (filterState.type === 'weekly') {
            console.log('[loadData] Weekly filter active:', {
                type: filterState.type,
                value: filterState.value,
                dateRange: filterState.dateRange,
                startDate: startDate,
                endDate: endDate
            });
        }

        fetch(url)
            .then(response => response.json())
            .then(res => {
                document.getElementById('loader').style.display = 'none';
                if (res.success) {
                    const d = res.data;
                    
                    // Debug logging
                    if (filterState.type === 'weekly') {
                        console.log('[loadData] Data received:', {
                            weeklyCount: d.chartWeekly?.length || 0,
                            dailyCount: d.chartDaily?.length || 0,
                            monthlyCount: d.chartMonthly?.length || 0,
                            weeklyData: d.chartWeekly
                        });
                    }
                    
                    updateKPI(d.dataKpi);
                    renderLeftCharts(d);
                    renderMainCharts(d);
                    renderTables(d);
                    document.getElementById('lastUpdate').innerText = new Date().toLocaleTimeString();
                } else {
                    console.error('Server error:', res.message);
                }
            })
            .catch(err => {
                console.error('Fetch error:', err);
                document.getElementById('loader').style.display = 'none';
            });
    }

    function updateKPI(kpi) {
        animateValue("kpiCheck", kpi.totalOk);
        animateValue("kpiNg", kpi.totalNg);
        // animateValue("kpiRr", kpi.rrPercentage.toFixed(2)); // Float needs diff handling
        document.getElementById('kpiRr').innerText = kpi.rrPercentage.toFixed(2);
        animateValue("kpiTotal", kpi.totalData);
        
        // Dynamic coloring for RR
        const rrElem = document.getElementById('kpiRr').parentElement;
        rrElem.className = kpi.rrPercentage > 2.0 ? "kpi-value text-danger" : "kpi-value text-warning";
    }

    // --- Chart Configurations ---
    const commonOpts = {
