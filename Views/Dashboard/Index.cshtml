        document.getElementById('nextNg').disabled = pageNg === totalPages;
        
        document.querySelector("#tableNg").parentElement.scrollTop = 0;
    }

    function changePage(type, direction) {
        if (type === 'part') {
            pagePart += direction;
            renderPartTable();
        } else {
            pageNg += direction;
            renderNgTable();
        }
    }

    // Helper to destroy old chart instance if exists
    let charts = {};
    window.charts = charts; // Expose globally for resize handler
    
    function createChart(selector, options) {
        const chartElement = document.querySelector(selector);
        if (!chartElement) {
            console.warn('Chart element not found:', selector);
            return;
        }
        
        if (charts[selector]) {
            try {
                charts[selector].destroy();
            } catch(e) {
                console.warn('Error destroying chart:', e);
            }
        }
        
        // Deep merge logic simplified to handle only needed objects
        const mergedOptions = { ...commonOpts, ...options };
        
        // Ensure chart uses container dimensions
        if (!mergedOptions.chart.width) mergedOptions.chart.width = '100%';
        if (!mergedOptions.chart.height) mergedOptions.chart.height = '100%';
        
        // Deep merge for chart context
        if (commonOpts.chart && options.chart) {
            mergedOptions.chart = { ...commonOpts.chart, ...options.chart };
            if (commonOpts.chart.events && options.chart.events) {
                mergedOptions.chart.events = { ...commonOpts.chart.events, ...options.chart.events };
            }
        }
        
        // Deep merge for xaxis nested objects (labels, etc)
        if (commonOpts.xaxis && options.xaxis) {
            mergedOptions.xaxis = { ...commonOpts.xaxis, ...options.xaxis };
            if (commonOpts.xaxis.labels && options.xaxis.labels) {
                mergedOptions.xaxis.labels = { ...commonOpts.xaxis.labels, ...options.xaxis.labels };
            }
        }

        // Deep merge for grid
        if (commonOpts.grid && options.grid) {
            mergedOptions.grid = { ...commonOpts.grid, ...options.grid };
            if (commonOpts.grid.padding && options.grid.padding) {
                mergedOptions.grid.padding = { ...commonOpts.grid.padding, ...options.grid.padding };
            }
        }
        
        try {
            charts[selector] = new ApexCharts(chartElement, mergedOptions);
            charts[selector].render();
        } catch(e) {
            console.error('Error creating chart:', e, selector);
        }
    }

    function animateValue(id, end) {
        const obj = document.getElementById(id);
        if(!obj) return;
        const val = (end === null || end === undefined) ? 0 : end;
        obj.innerText = val.toLocaleString(); 
    }

    function toggleFullScreen() {
        if (!document.fullscreenElement) {
            document.documentElement.requestFullscreen().catch(err => {
                alert(`Error attempting to enable full-screen mode: ${err.message} (${err.name})`);
            });
        } else {
            if (document.exitFullscreen) {
                document.exitFullscreen();
            }
        }
    }

    // Harmless Hack: Force chart resize on fullscreen change
    document.addEventListener('fullscreenchange', () => {
        setTimeout(() => {
            // Trigger all charts to resize
            if (window.charts) {
                Object.keys(window.charts).forEach(function(selector) {
                    if (window.charts[selector] && typeof window.charts[selector].resize === 'function') {
                        try {
                            window.charts[selector].resize();
                        } catch(e) {
                            console.warn('Chart resize error:', e);
                        }
                    }
                });
            }
            window.dispatchEvent(new Event('resize'));
        }, 300); // Tunggu transisi layar selesai
    });
