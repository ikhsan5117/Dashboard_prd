@{
    ViewData["Title"] = "Production Quality Dashboard";
    Layout = null; // Fullscreen mode for TV
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Production Quality Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <!-- FontAwesome for Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --bg-dark: #0b1121;
            --card-bg: #151e32;
            --text-primary: #ffffff;
            --text-secondary: #94a3b8;
            --border-color: rgba(255,255,255,0.05);
            /* Accents */
            --accent-blue: #3b82f6; 
            --accent-cyan: #06b6d4;
            --accent-yellow: #f59e0b;
            --accent-green: #10b981;
            --accent-red: #ef4444;
            
            /* Gradient Colors */
            --grad-blue-start: #1e3a8a; --grad-blue-end: #3b82f6;
            --grad-red-start: #7f1d1d; --grad-red-end: #ef4444;
            --grad-cyan-start: #155e75; --grad-cyan-end: #06b6d4;
            --grad-gray-start: #1f2937; --grad-gray-end: #4b5563;
        }

        body {
            background-color: var(--bg-dark);
            color: var(--text-primary);
            font-family: 'Inter', sans-serif;
            font-size: 0.85rem;
            overflow-x: hidden;
            height: 100vh;
            display: flex;
            flex-direction: column;
            padding: 10px;
        }

        /* Responsive Design for Different Screen Sizes */
        /* Small screens (laptops) */
        @@media (max-width: 1366px) {
            body { font-size: 0.8rem; }
            .kpi-value { font-size: 1.8rem; }
            .kpi-icon { font-size: 2.5rem; }
            .content-grid { grid-template-columns: 32% 68%; }
        }
        
        /* Medium screens (desktop) */
        @@media (min-width: 1367px) and (max-width: 1919px) {
            body { font-size: 0.85rem; }
            .kpi-value { font-size: 2.2rem; }
            .kpi-icon { font-size: 3.2rem; }
            .content-grid { grid-template-columns: 35% 65%; }
        }
        
        /* Large screens (TV/4K) */
        @@media (min-width: 1920px) {
            body { font-size: 1rem; }
            .kpi-value { font-size: 2.5rem; }
            .kpi-icon { font-size: 3.8rem; }
            .content-grid { grid-template-columns: 35% 65%; }
            .kpi-row { height: 12vh; min-height: 120px; max-height: 140px; }
        }
        
        /* Ultra-wide screens */
        @@media (min-width: 2560px) {
            body { font-size: 1.1rem; }
            .kpi-value { font-size: 2.8rem; }
            .kpi-icon { font-size: 4.2rem; }
            .content-grid { grid-template-columns: 30% 70%; }
        }

        .dashboard-container {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        /* --- KPI Cards - Enhanced Deep Dark Gradient --- */
        .kpi-row {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 15px;
            height: 11vh;
            min-height: 100px;
            max-height: 120px;
        }

        .kpi-card {
            border-radius: 12px;
            padding: 16px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            border: 1px solid rgba(255, 255, 255, 0.05);
        }

        .kpi-card:hover {
            transform: translateY(-5px) scale(1.02);
            box-shadow: 0 10px 20px -5px rgba(0,0,0,0.5);
        }

        /* Specific Deep Dark Gradients */
        .kpi-card.gradient-blue {
            background: linear-gradient(145deg, #0f172a 0%, #1e3a8a 150%);
            border-left: 4px solid #3b82f6;
            box-shadow: inset 0 0 20px rgba(59, 130, 246, 0.1);
        }
        .kpi-card.gradient-red {
            background: linear-gradient(145deg, #0f172a 0%, #7f1d1d 150%);
            border-left: 4px solid #ef4444;
            box-shadow: inset 0 0 20px rgba(239, 68, 68, 0.1);
        }
        .kpi-card.gradient-cyan {
            background: linear-gradient(145deg, #0f172a 0%, #155e75 150%);
            border-left: 4px solid #06b6d4;
            box-shadow: inset 0 0 20px rgba(6, 182, 212, 0.1);
        }
        .kpi-card.gradient-gray {
            background: linear-gradient(145deg, #0f172a 0%, #334155 150%);
            border-left: 4px solid #94a3b8;
            box-shadow: inset 0 0 20px rgba(148, 163, 184, 0.1);
        }

        .kpi-content {
            z-index: 2;
        }

        .kpi-label {
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 700;
            color: rgba(255, 255, 255, 0.6);
            margin-bottom: 5px;
        }

        .kpi-value {
            font-size: 2.2rem;
            font-weight: 800;
            line-height: 1;
            color: #ffffff;
            letter-spacing: -1px;
        }
        
        .kpi-unit { 
            font-size: 0.8rem;
            font-weight: 600;
            margin-left: 5px;
            color: rgba(255, 255, 255, 0.4);
            letter-spacing: 0;
        }

        /* Icon Styling - Cleaner & More Integrated */
        .kpi-icon {
            font-size: 3.2rem;
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            z-index: 1;
            transition: all 0.4s ease;
        }

        .kpi-card:hover .kpi-icon {
            transform: translateY(-50%) scale(1.1) rotate(-10deg);
            opacity: 0.4;
        }

        .kpi-card.gradient-blue .kpi-icon { color: rgba(59, 130, 246, 0.25); }
        .kpi-card.gradient-red .kpi-icon { color: rgba(239, 68, 68, 0.25); }
        .kpi-card.gradient-cyan .kpi-icon { color: rgba(6, 182, 212, 0.25); }
        .kpi-card.gradient-gray .kpi-icon { color: rgba(148, 163, 184, 0.2); }

        /* --- Main Content Grid --- */
        .content-grid {
            display: grid;
            grid-template-columns: 35% 65%; /* Perlebar kolom kiri dari 28% ke 35% agar grafik tren lebih panjang */
            gap: 10px;
            flex-grow: 1;
            min-height: 0; /* Important for flex children */
            height: calc(100vh - 12vh - 30px); /* Fill remaining space */
        }
        
        /* Ensure consistent height calculation */
        @@media (min-width: 1920px) {
            .content-grid {
                height: calc(100vh - 12vh - 30px);
            }
        }

        /* Left Column (Charts Stacked) */
        .left-col {
            display: flex;
            flex-direction: column;
            gap: 10px;
            height: 100%;
        }

        .side-chart-card {
            background-color: #151e32;
            border-radius: 12px;
            padding: 5px 5px 5px 35px;
            flex: 1; /* UBAH: Gunakan flex agar mengisi sisa ruang ke bawah */
            min-height: 0; /* PENTING: Agar responsif mengecil */
            border: 1px solid rgba(255, 255, 255, 0.05);
            position: relative;
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
            overflow: hidden;
            margin-bottom: 0px; /* Reset margin, biarkan gap yang mengatur */
        }

        .side-chart-card.blue-accent { border-left: 4px solid #3b82f6; }
        .side-chart-card.yellow-accent { border-left: 4px solid #f59e0b; }
        .side-chart-card.green-accent { border-left: 4px solid #10b981; }

        .chart-title-vertical {
            writing-mode: vertical-rl;
            text-orientation: mixed;
            transform: rotate(180deg);
            position: absolute;
            left: 0px;
            top: 0;
            bottom: 0;
            width: 30px;
            display: flex;
            justify-content: center;
            align-items: center;
            background: rgba(30, 41, 59, 0.4); /* Biru gelap transparan */
            color: #94a3b8;
            font-weight: 800;
            font-size: 0.6rem;
            text-transform: uppercase;
            letter-spacing: 2px;
            border-right: 1px solid rgba(255,255,255,0.05);
            pointer-events: none;
        }

        .side-card-label {
            font-size: 0.65rem;
            font-weight: 700;
            color: #94a3b8;
            margin-bottom: 5px;
            text-transform: uppercase;
            letter-spacing: 1px;
            opacity: 0.8;
        }

        .side-chart-area {
            position: absolute;
            top: 25px; /* Beri ruang untuk legend kustom di atas */
            left: 35px;
            right: 5px;
            bottom: 5px;
            width: auto;
            height: auto;
            min-width: 0;
            min-height: 0;
        }
        
        /* Ensure chart containers resize properly */
        .side-chart-card .apexcharts-canvas,
        .main-chart-card .apexcharts-canvas {
            width: 100% !important;
            height: 100% !important;
        }

        /* --- Force Hide ApexCharts Legend --- */
        .left-col .apexcharts-legend {
            display: none !important;
        }

        /* --- Custom Professional Legend --- */
        .custom-chart-legend {
            position: absolute;
            top: 8px;
            left: 45px;
            right: 15px;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 15px;
            z-index: 20;
            pointer-events: none;
        }

        .legend-item {
            display: flex;
            align-items: center;
            gap: 6px;
            font-size: 8px;
            font-weight: 800;
            color: #94a3b8;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .l-marker { border-radius: 2px; flex-shrink: 0; }
        .l-marker.check { width: 10px; height: 10px; background: #3b82f6; }
        .l-marker.ng { width: 10px; height: 10px; background: #f59e0b; }
        .l-marker.rr { width: 16px; height: 2px; background: #10b981; border-radius: 0; }
        .l-marker.target { 
            width: 16px; 
            height: 2px; 
            background: repeating-linear-gradient(90deg, #ef4444, #ef4444 6px, transparent 6px, transparent 10px);
        }

        /* Clear old legend styles */

        /* --- Right Column & Filters --- */
        .right-col {
            display: flex;
            flex-direction: column;
            gap: 25px; /* Ditingkatkan untuk memberi jarak lebih antar baris */
            height: 100%;
        }

        .filter-panel {
            background: rgba(15, 23, 42, 0.6);
            backdrop-filter: blur(15px);
            border-radius: 12px;
            padding: 8px 12px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 4px 20px rgba(0,0,0,0.4);
            margin-bottom: 10px; /* Ditingkatkan */
        }

        .filter-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 8px;
            padding-bottom: 5px;
            border-bottom: 1px solid rgba(255,255,255,0.05);
        }

        .filter-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 10px;
        }

        .filter-item {
            display: flex;
            flex-direction: column;
            gap: 2px;
        }

        .filter-item label {
            font-size: 0.6rem;
            font-weight: 700;
            color: #64748b;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .form-select-dark {
            background-color: #0f172a;
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: #f8fafc;
            font-size: 0.75rem;
            padding: 4px 8px;
            border-radius: 6px;
            outline: none;
            cursor: pointer;
            transition: all 0.2s;
            height: 28px;
            width: 100%;
        }

        .form-select-dark:focus {
            border-color: #3b82f6;
            outline: none;
            box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
        }

        .charts-row {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 10px;
            flex: 4; /* Adjusted from 3.5 to give more room for labels */
            min-height: 0; 
            min-width: 0;
        }
        
        /* Responsive chart row for small screens */
        @@media (max-width: 1366px) {
            .charts-row {
                grid-template-columns: 1.5fr 1fr;
                gap: 8px;
            }
            
            /* Ensure donut chart has enough space and is visible */
            .main-chart-card:nth-child(2) {
                min-height: 350px;
            }
            
            /* Give more space to donut chart container */
            #chartDonut {
                min-height: 320px !important;
            }
        }

        .main-chart-card {
            background: #151e32;
            border-radius: 12px;
            padding: 20px;
            border: 1px solid rgba(255, 255, 255, 0.05);
            display: flex;
            flex-direction: column;
            position: relative;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            overflow: hidden; /* PENTING: Mencegah chart keluar container */
            min-height: 0;
            min-width: 0;
        }
        
        /* Ensure chart divs take full available space */
        .main-chart-card > div[id^="chart"] {
            flex: 1;
            min-height: 0;
            min-width: 0;
            position: relative;
        }
        
        /* Donut chart specific styling for small screens */
        @@media (max-width: 1366px) {
            #chartDonut {
                min-height: 320px !important;
            }
            
            /* Let ApexCharts handle legend scroll */
            .main-chart-card .apexcharts-legend {
                padding: 0 !important;
            }
            
            /* Ensure donut chart container takes full height */
            .main-chart-card:nth-child(2) #chartDonut {
                display: flex;
                align-items: center;
                justify-content: center;
            }
        }

        .main-chart-card::before {
            content: '';
            position: absolute;
            top: 0; left: 0; right:0; height: 3px;
            border-radius: 12px 12px 0 0;
            background: #3b82f6; /* Default accent */
        }
        
        .main-chart-card:nth-child(2)::before { background: #06b6d4; }

        .card-header-label {
            text-align: center;
            font-weight: 700;
            color: #94a3b8;
            text-transform: uppercase;
            font-size: 0.75rem;
            margin-bottom: 15px;
            letter-spacing: 1.5px;
        }

        /* Make X-Axis label distinct and clickable */
        .apexcharts-xaxis-label {
            cursor: pointer;
            fill: #94a3b8; /* Default color */
            font-weight: 600;
            transition: all 0.2s ease;
        }
        .apexcharts-xaxis-label:hover {
            fill: #3b82f6 !important; /* Blue on hover */
            font-weight: 700;
            text-shadow: 0 0 5px rgba(59, 130, 246, 0.5);
        }

        .tables-row {
            display: grid;
            grid-template-columns: 1.5fr 1fr;
            gap: 10px;
            flex: 5; /* Increased from 4 to fill space */
            min-height: 0; 
            min-width: 0;
            margin-top: 10px; /* Jarak tambahan dari baris chart di atasnya */
        }

        /* --- Tables Styling --- */
        .table-card {
            background: #151e32;
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.05);
            display: flex;
            flex-direction: column;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        }

        .table-header {
            background: #1e293b;
            padding: 12px 20px;
            font-weight: 700;
            font-size: 0.75rem;
            color: #f1f5f9;
            text-transform: uppercase;
            letter-spacing: 1px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

        .table-content {
            flex-grow: 1;
            overflow-y: auto;
            padding: 5px;
        }

        table.dark-table {
            width: 100%;
            font-size: 0.85rem;
            color: #cbd5e1;
            border-collapse: separate;
            border-spacing: 0 4px;
        }

        table.dark-table th {
            position: sticky;
            top: 0;
            background: #0f172a; 
            padding: 8px 12px; /* Dikurangi dari 12px 15px */
            text-align: left;
            font-weight: 700;
            color: #f8fafc;
            text-transform: uppercase;
            font-size: 0.65rem; /* Perkecil sedikit */
            letter-spacing: 1px;
            z-index: 10;
            border-bottom: 2px solid rgba(59, 130, 246, 0.5);
        }

        table.dark-table tbody tr {
            background-color: rgba(255, 255, 255, 0.02);
            transition: all 0.2s ease;
        }

        table.dark-table tbody tr:hover {
            background-color: rgba(255, 255, 255, 0.06);
            transform: scale(1.002);
        }

        table.dark-table td {
            padding: 6px 12px; /* Dikurangi dari 10px 15px supaya lebih ramping */
            border: none;
            border-right: 1px solid rgba(255, 255, 255, 0.05);
        }
        
        table.dark-table th {
            border-right: 1px solid rgba(255, 255, 255, 0.05); /* Garis Vertikal Header */
        }

        table.dark-table td:last-child, table.dark-table th:last-child {
            border-right: none;
        }
        
        table.dark-table td:first-child { border-radius: 6px 0 0 6px; text-align: center; width: 50px; }
        table.dark-table td:last-child { border-radius: 0 6px 6px 0; }
        
        .badge-rr { 
            padding: 4px 8px; 
            border-radius: 5px; 
            font-weight: 700; 
            font-size: 0.75rem; 
            display: inline-block;
            min-width: 60px;
            text-align: center;
        }
        .bg-red-soft { background: rgba(239, 68, 68, 0.15); color: #f87171; border: 1px solid rgba(239, 68, 68, 0.2); }
        .bg-green-soft { background: rgba(16, 185, 129, 0.15); color: #34d399; border: 1px solid rgba(16, 185, 129, 0.2); }
        .bg-yellow-soft { background: rgba(245, 158, 11, 0.15); color: #fbbf24; border: 1px solid rgba(245, 158, 11, 0.2); }

        /* Pagination Styling */
        .pagination-footer {
            padding: 8px 20px;
            background: rgba(15, 23, 42, 0.4);
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-top: 1px solid rgba(255, 255, 255, 0.05);
        }

        .pagination-info {
            font-size: 0.7rem;
            color: #64748b;
        }

        .pagination-btns {
            display: flex;
            gap: 5px;
        }

        .btn-page {
            background: #1e293b;
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: #cbd5e1;
            padding: 4px 12px;
            border-radius: 6px;
            font-size: 0.75rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            user-select: none;
        }

        .btn-page:hover:not(:disabled) {
            background: #3b82f6;
            color: white;
            border-color: #60a5fa;
            box-shadow: 0 0 10px rgba(59, 130, 246, 0.4);
        }

        .btn-page:active:not(:disabled) {
            transform: scale(0.95);
        }

        .btn-page:disabled {
            opacity: 0.2;
            cursor: default;
            pointer-events: none;
        }

        /* Fixed height for table scrolling - responsive */
        .table-card .table-content {
            height: 300px; /* Constrain height to trigger scroll */
            overflow-y: auto;
            min-height: 200px;
        }
        
        @@media (min-width: 1920px) {
            .table-card .table-content {
                height: 350px;
            }
        }
        
        @@media (max-width: 1366px) {
            .table-card .table-content {
                height: 250px;
            }
        }

        /* Loader */
        #loader {
            position: fixed; top:0; left:0; width:100%; height:100%;
            background: rgba(11, 17, 33, 0.8);
            display: flex; justify-content: center; align-items: center; z-index: 9999;
        }
        .spinner-border { color: var(--accent-blue); }

        /* Active Filter Indicator */
        .active-filter-indicator {
            background: linear-gradient(135deg, rgba(59, 130, 246, 0.2), rgba(16, 185, 129, 0.2));
            border: 1px solid rgba(59, 130, 246, 0.4);
            border-radius: 8px;
            padding: 10px 15px;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 15px;
            font-size: 0.75rem;
            color: #f8fafc;
            font-weight: 600;
            backdrop-filter: blur(10px);
            animation: slideDown 0.3s ease;
        }

        @@keyframes slideDown {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .filter-nav-buttons {
            display: flex;
            gap: 5px;
        }

        .btn-filter-nav {
            background: rgba(59, 130, 246, 0.2);
            border: 1px solid rgba(59, 130, 246, 0.4);
            color: #93c5fd;
            padding: 4px 10px;
            border-radius: 5px;
            font-size: 0.7rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .btn-filter-nav:hover:not(:disabled) {
            background: rgba(59, 130, 246, 0.4);
            color: #fff;
            transform: scale(1.05);
        }

        .btn-filter-nav:disabled {
            opacity: 0.3;
            cursor: not-allowed;
        }

        .filter-label {
            flex: 1;
            text-align: center;
        }

        .btn-clear-filter {
            background: rgba(239, 68, 68, 0.2);
            border: 1px solid rgba(239, 68, 68, 0.4);
            color: #fca5a5;
            padding: 4px 10px;
            border-radius: 5px;
            font-size: 0.7rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-clear-filter:hover {
            background: rgba(239, 68, 68, 0.4);
            color: #fff;
            transform: scale(1.05);
        }
    </style>
</head>
<body>

<div id="loader"><div class="spinner-border" role="status"></div></div>

<div class="dashboard-container">
    <!-- Top KPI Row -->
    <div class="kpi-row">
        <div class="kpi-card gradient-blue">
            <div class="kpi-content">
                <div class="kpi-label">QTY OK</div>
                <div class="kpi-value"><span id="kpiCheck">0</span><span class="kpi-unit">pcs</span></div>
            </div>
            <i class="fas fa-check-circle kpi-icon"></i>
        </div>
        <div class="kpi-card gradient-red">
            <div class="kpi-content">
                <div class="kpi-label">QTY NG</div>
                <div class="kpi-value"><span id="kpiNg">0</span><span class="kpi-unit">pcs</span></div>
            </div>
            <i class="fas fa-exclamation-triangle kpi-icon"></i>
        </div>
        <div class="kpi-card gradient-cyan">
